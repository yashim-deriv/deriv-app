{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "paths": {
            "Assets/*": ["./src/Assets/*"],
            "_common/*": ["./src/_common/*"],
            "Constants/*": ["./src/Constants/*"],
            "Components/*": ["./src/Components/*"],
            "Containers/*": ["./src/Containers/*"],
            "Modules/*": ["./src/Modules/*"],
            "Sass/*": ["./src/sass/*"],
            "Stores/*": ["./src/Stores/*"],
            "Utils/*": ["./src/Utils/*"],
            "@deriv/*": ["../*/src"]
        },
        "outDir": "./dist",
        "baseUrl": "./"
    },
    "include": ["src", "globals.d.ts"],
    "exclude": ["**/__tests__/**/*"]
}
